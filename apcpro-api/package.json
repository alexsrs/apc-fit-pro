{
  "name": "apcpro-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsup src/server.ts --format cjs,esm --dts --out-dir dist",
    "start": "node dist/server.js",
    "start:dev": "tsx src/server.ts",
    "start:watch": "tsx watch src/server.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "deploy:build": "npm ci && npm run prisma:generate && npm run build",
    "deploy:migrate": "npm run prisma:migrate",
    "health": "curl -f http://localhost:8080/health || exit 1",
    "lint": "echo 'Lint não configurado ainda'",
    "test": "echo 'Testes não configurados ainda'",
    "postinstall": "prisma generate",
    "azure:build": "npm run clean:deps && npm ci --production=false && npm run prisma:generate && npm run build",
    "azure:start": "npm run prisma:migrate && npm start",
    "clean:deps": "powershell -Command \"Remove-Item -Recurse -Force node_modules -ErrorAction SilentlyContinue; Remove-Item -Force package-lock.json -ErrorAction SilentlyContinue\"",
    "fix:rollup": "npm run clean:deps && npm install --omit=optional && npm install --include=optional"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
