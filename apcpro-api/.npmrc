# Configurações para Azure App Service
registry=https://registry.npmjs.org/
fund=false
audit=false
save-exact=true
package-lock=true

# Otimizações para Azure e correção bug Rollup
legacy-peer-deps=true
maxsockets=20
fetch-retries=5
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Substituição das configurações deprecated:
# - Removido: optional=true (usar --include=optional quando necessário)
# - Removido: production=false (usar --omit=dev quando necessário)  
# - Removido: cache-min=86400 (substituído por prefer-offline)
prefer-offline=false
fetch-timeout=300000
